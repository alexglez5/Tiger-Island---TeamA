import org.junit.Test;

import static org.junit.Assert.*;

/**
 * Created by NotKali on 3/15/2017.
 */
public class TileTest {
    private Hex.TerrainType firstTerrainType = Hex.TerrainType.VOLCANO;
    Hex firstHex = new Hex(firstTerrainType);
    private Hex.TerrainType secondTerrainType = Hex.TerrainType.MOUNTAIN;
    Hex secondHex = new Hex(secondTerrainType);
    private Hex.TerrainType thirdTerrainType = Hex.TerrainType.JUNGLE;
    Hex thirdHex = new Hex(thirdTerrainType);

    Hex [] threeHexes = {firstHex, secondHex, thirdHex};

    Tile testingTile = new Tile(threeHexes);

    @Test
    public void hasThreeHexes() throws Exception {
        assertTrue(testingTile.hasThreeHexes());
    }
}
